<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" id="main-css" href="/stylesheets/main.css" />
    <script src="/javascripts/radar.js" defer></script>
    <script src="/javascripts/search.js" defer></script>
    <script src="/javascripts/scrollTop.js" defer></script>
    <script src="/javascripts/filterMenu.js" defer></script>
    <script src="/javascripts/search.js" defer></script>
    <script src="/javascripts/radarSwap.js" defer></script>
    <script src="/javascripts/loginMenu.js" defer></script>
    <title>Chuni Radar</title>
  </head>
  <body>
    <button id="openLoginForm">
      <img src="/menu_24dp.svg" />
    </button>
    <%- include('../partials/header.ejs') %>
    <div class="offscreen closed" id="login-div">
      <form action="/" method="post" class="login-form">
        <% if (!admin) { %>
        <span class="admin-login-title">admin login</span>
        <input
          type="text"
          name="username"
          id="username"
          placeholder="enter username"
        />
        <input
          type="password"
          name="password"
          id="password"
          placeholder="enter password"
        />
        <button type="submit">Login</button>
        <% } %> <% if (admin) { %>
        <a href="/logout" class="logout-link">logout</a>
        <% } %>
      </form>
    </div>
    <div class="date-updated">
      updated: 06/10/24
      <a href="/random" class="randomChart">
        <img src="/dice.svg" />
      </a>
    </div>
    <%- body %>
  </body>
</html>
